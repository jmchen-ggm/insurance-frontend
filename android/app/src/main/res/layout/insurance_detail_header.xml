<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:clickable="false"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp"
              android:paddingBottom="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/thumb_iv"
        android:layout_width="match_parent"
        android:layout_height="132dp"/>

    <TextView
        android:paddingTop="20dp"
        android:textSize="@dimen/BigTitleTextSize"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_tv"/>

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/age_tv"
        android:textSize="@dimen/TitleTextSize"
        android:textColor="@color/grey_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/compensation_tv"
        android:paddingTop="10dp"
        android:textSize="@dimen/TitleTextSize"
        android:textColor="@color/grey_color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/premium_tv"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:textSize="@dimen/TitleTextSize"
        android:textColor="@color/grey_color_3"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/company_thumb_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/company_name_tv"
            android:text="{company_name}"
            android:layout_marginLeft="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/insurance_type_thumb_iv"
            android:layout_margin="5dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/insurance_type_name_tv"
            android:text="{insurance_type_name}"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>