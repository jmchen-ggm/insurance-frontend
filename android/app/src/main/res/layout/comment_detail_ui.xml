<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="@color/white"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:background="@null"
        android:scrollbars="none"
        android:focusable="false"
        android:fadingEdge="none"
        android:layout_marginBottom="49dp"
        android:divider="@null"
        android:listSelector="@color/transparent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/grey_color_1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="6dp"
            android:layout_height="48dp">

            <EditText
                android:id="@+id/reply_comment_et"
                android:layout_width="0dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/comment_reply_bg_shape"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/reply_post_tv"
                android:layout_width="64dp"
                android:gravity="center"
                android:textSize="@dimen/HintTextSize"
                android:layout_height="match_parent"
                android:text="@string/comment_post"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>