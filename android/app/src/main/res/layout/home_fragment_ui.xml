<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/loading_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"/>
        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:id="@+id/refresh_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="5dp"
            style="@android:style/Widget.ProgressBar.Small"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scrollview"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/launcher_header"
                android:layout_width="match_parent"
                android:layout_height="152dp">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    app:canLoop="true"
                    android:layout_height="match_parent">

                </com.bigkoo.convenientbanner.ConvenientBanner>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_below="@id/launcher_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:id="@+id/compare_layout"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/compare_icon_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_width="48dp"
                        android:background="@drawable/menu_item_bg_shape"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:src="@drawable/compare_icon"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/compare_icon_iv"
                        android:id="@+id/compare_tv"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grey_color_2"
                        android:layout_width="wrap_content"
                        android:text="@string/menu_compare_text"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout android:layout_width="0dp"
                                android:id="@+id/evaluate_layout"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView
                        android:id="@+id/evaluate_icon_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_width="48dp"
                        android:background="@drawable/menu_item_bg_shape"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:src="@drawable/evaluate_icon"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/evaluate_icon_iv"
                        android:id="@+id/evaluate_tv"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grey_color_2"
                        android:layout_width="wrap_content"
                        android:text="@string/menu_evaluate_text"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="0dp"
                                android:id="@+id/consult_layout"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <ImageView
                        android:id="@+id/consult_icon_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_width="48dp"
                        android:background="@drawable/menu_item_bg_shape"
                        android:layout_height="48dp"
                        android:padding="10dp"
                        android:src="@drawable/consult_icon"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/consult_icon_iv"
                        android:id="@+id/consult_tv"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grey_color_2"
                        android:layout_width="wrap_content"
                        android:text="@string/menu_consult_text"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:id="@+id/learn_layout"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/learn_icon_iv"
                        android:layout_centerHorizontal="true"
                        android:layout_width="48dp"
                        android:background="@drawable/menu_item_bg_shape"
                        android:layout_height="48dp"
                        android:padding="5dp"
                        android:src="@drawable/learn_icon"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/learn_icon_iv"
                        android:id="@+id/learn_tv"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grey_color_2"
                        android:layout_width="wrap_content"
                        android:text="@string/menu_learn_text"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/hot_comment_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/insurance_item_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/hot_comment_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="@string/hot_comment_block"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/forward_icon"/>
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="1dp"
                        android:background="@color/grey_color_1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_margin="5dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:id="@+id/hot_comment_avatar_iv"/>

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="{nickname}"
                            android:textColor="@color/main_blue_color"
                            android:textSize="@dimen/TitleTextSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/hot_comment_nickname_tv"/>
                    </LinearLayout>

                    <TextView
                        android:padding="5dp"
                        android:textSize="@dimen/HintTextSize"
                        android:id="@+id/hot_comment_content_tv"
                        android:layout_width="match_parent"
                        android:text="{content}"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/hot_comment_info_tv"
                    android:textSize="@dimen/InfoTextSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <LinearLayout
                    android:id="@+id/insurance_type_layout"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/insurance_item_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TitleTextSize"
                        android:text="@string/insurance_type_block"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/insurance_type_1_iv"
                                    android:scaleType="centerCrop"
                                    android:layout_width="96dp"
                                    android:layout_height="64dp"/>

                                <TextView
                                    android:id="@+id/insurance_type_name_1_tv"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/grey_color_2"
                                    android:textSize="@dimen/TitleTextSize"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/medical_insurance"/>
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/insurance_type_2_iv"
                                    android:scaleType="centerCrop"
                                    android:layout_width="96dp"
                                    android:layout_height="64dp"/>

                                <TextView
                                    android:id="@+id/insurance_type_name_2_tv"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/grey_color_2"
                                    android:textSize="@dimen/TitleTextSize"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/personal_accident_insurance"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/insurance_type_3_iv"
                                    android:scaleType="centerCrop"
                                    android:layout_width="96dp"
                                    android:layout_height="64dp"/>

                                <TextView
                                    android:id="@+id/insurance_type_name_3_tv"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/grey_color_2"
                                    android:textSize="@dimen/TitleTextSize"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/financing_insurance"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="165dp">

                <LinearLayout
                    android:id="@+id/company_layout"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@drawable/insurance_item_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/company_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="@string/insurance_company_block"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/forward_icon"/>
                    </RelativeLayout>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/company_item_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>