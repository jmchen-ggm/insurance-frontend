<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="@color/grey_color_1"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/article_item_selector"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/thumb_iv"
            android:layout_width="match_parent"
            android:layout_height="132dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_tv"
                android:textSize="@dimen/HintTextSize"
                android:text="{title}"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/desc_tv"
                android:text="{desc}"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:textColor="@color/black"
                android:textSize="@dimen/DescTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/time_tv"
                android:text="{time}"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/grey_color_2"
                android:textSize="@dimen/DescTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>